<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".DescriptionDetailFragment">



        <TextView
            android:id="@+id/txtLblAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:text="One New Orchard Road, Armonk, United States, 10504"
            app:layout_constraintStart_toEndOf="@+id/txtLblAddress"
            app:layout_constraintTop_toTopOf="@+id/txtLblAddress" />

        <TextView
            android:id="@+id/txtLblExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Exchange:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/txtLblAddress"
            app:layout_constraintTop_toBottomOf="@+id/txtLblAddress" />

        <TextView
            android:id="@+id/txtExchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="NYSE"
            app:layout_constraintBottom_toBottomOf="@+id/txtLblExchange"
            app:layout_constraintStart_toEndOf="@+id/txtLblExchange"
            app:layout_constraintTop_toTopOf="@+id/txtLblExchange" />

        <TextView
            android:id="@+id/txtLblSector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Sector:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/txtLblExchange"
            app:layout_constraintTop_toBottomOf="@+id/txtLblExchange" />

        <TextView
            android:id="@+id/txtSector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Technology"
            app:layout_constraintBottom_toBottomOf="@+id/txtLblSector"
            app:layout_constraintStart_toEndOf="@+id/txtLblSector"
            app:layout_constraintTop_toTopOf="@+id/txtLblSector" />

        <TextView
            android:id="@+id/txtLblIndustry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Industry:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/txtLblSector"
            app:layout_constraintTop_toBottomOf="@+id/txtLblSector" />

        <TextView
            android:id="@+id/txtIndustry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Information Technology Services"
            app:layout_constraintBottom_toBottomOf="@+id/txtLblIndustry"
            app:layout_constraintStart_toEndOf="@+id/txtLblIndustry"
            app:layout_constraintTop_toTopOf="@+id/txtLblIndustry"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtLblDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Description:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/txtLblIndustry"
            app:layout_constraintTop_toBottomOf="@+id/txtLblIndustry" />

        <ScrollView
            android:layout_width="360dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLblDescription"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Description blah blah"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="87dp" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
